{
  "extends": "react-app",
  "settings": {
    "react": {
      "version": "16.8"
    }
  },
  "plugins": ["prettier"],
  "rules": {
    "jsx-a11y/href-no-hash": "off",
    "react/jsx-curly-spacing": [2, {"when": "always"}],
    "indent": ["error", 2, {
      "SwitchCase": 1,
      "ImportDeclaration": "first",
      "VariableDeclarator": "first",
      "ObjectExpression": "first",
      "ignoredNodes": ["JSXAttribute", "JSXSpreadAttribute"]
    }],
    "prettier/prettier": "error"
  }
}
